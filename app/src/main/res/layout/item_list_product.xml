<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.johnfneto.bitcoinprices.utils.Utils" />
        <import type="com.johnfneto.bitcoinprices.models.ProductModel" />

        <variable
            name="product"
            type="com.johnfneto.bitcoinprices.models.ProductModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/text_margin"
        android:paddingStart="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{product.currency}"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sell_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_buy"
                    android:ems="5"
                    android:maxEms="5"
                    android:minEms="5"
                    android:minLines="1"
                    android:padding="5dp"
                    android:text="@{Utils.formatPrice(product.buy)}"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/buy_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_sell"
                    android:ems="5"
                    android:maxEms="5"
                    android:minEms="5"
                    android:minLines="1"
                    android:padding="5dp"
                    android:text="@{Utils.formatPrice(product.sell)}"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_spread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{Utils.calculateSpread(product.buy, product.sell)}"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </LinearLayout>
</layout>
